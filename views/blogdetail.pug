extends layouts/main

block content
    .blog__detail
        ul.link__post
            li
                a.list__link(href=routes.blog) go back list
                a.post__link(href=routes.editBlog(blog.id)) Edit Your Post
        .blog__content        
            .blog__pic
                img(src=`/${blog.fileUrl}`)
            .blog__comments
                if blog.comments.length == 1
                    span.blog__comment-number 1 comment
                else 
                    span.blog__comment-number #{blog.comments.length} comments
            .blog__header
                span.title Title : 
                span.blog__title=blog.title
            .blog__content
                h4.blog__post=blog.post